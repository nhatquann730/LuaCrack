--// Timer GUI gi·ªØa m√†n h√¨nh, k√©o ƒë∆∞·ª£c, c√≥ Pause + Reset

-- X√≥a GUI c≈© (n·∫øu c√≥)
if game.CoreGui:FindFirstChild("TimerGUI") then
    game.CoreGui:FindFirstChild("TimerGUI"):Destroy()
end

-- T·∫°o ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "TimerGUI"
gui.Parent = game.CoreGui
gui.ResetOnSpawn = false

-- Khung ch√≠nh
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 180, 0, 70)
frame.Position = UDim2.new(0.5, -90, 0.5, -35) -- Gi·ªØa m√†n h√¨nh
frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
frame.BackgroundTransparency = 0.05
frame.Active = true
frame.Draggable = true -- Cho ph√©p k√©o
frame.Parent = gui

-- Bo g√≥c
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 15)
corner.Parent = frame

-- Vi·ªÅn nh·∫π
local stroke = Instance.new("UIStroke")
stroke.Thickness = 1.5
stroke.Color = Color3.fromRGB(255, 255, 255)
stroke.Transparency = 0.3
stroke.Parent = frame

-- Label th·ªùi gian
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, 0, 0.5, 0)
label.Position = UDim2.new(0, 0, 0, 0)
label.BackgroundTransparency = 1
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.Font = Enum.Font.GothamBold
label.TextScaled = true
label.Text = "00:00"
label.Parent = frame

-- N√∫t Pause/Resume
local pauseBtn = Instance.new("TextButton")
pauseBtn.Size = UDim2.new(0.5, -5, 0.4, 0)
pauseBtn.Position = UDim2.new(0, 5, 0.55, 0)
pauseBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
pauseBtn.Text = "‚è∏ Pause"
pauseBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
pauseBtn.Font = Enum.Font.GothamBold
pauseBtn.TextScaled = true
pauseBtn.Parent = frame

local pauseCorner = Instance.new("UICorner")
pauseCorner.CornerRadius = UDim.new(0, 10)
pauseCorner.Parent = pauseBtn

-- N√∫t Reset
local resetBtn = Instance.new("TextButton")
resetBtn.Size = UDim2.new(0.5, -5, 0.4, 0)
resetBtn.Position = UDim2.new(0.5, 5, 0.55, 0)
resetBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
resetBtn.Text = "üîÑ Reset"
resetBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
resetBtn.Font = Enum.Font.GothamBold
resetBtn.TextScaled = true
resetBtn.Parent = frame

local resetCorner = Instance.new("UICorner")
resetCorner.CornerRadius = UDim.new(0, 10)
resetCorner.Parent = resetBtn

-- Logic ƒë·∫øm th·ªùi gian
local seconds = 0
local paused = false

task.spawn(function()
	while true do
		if not paused then
			seconds += 1
			local minutes = math.floor(seconds / 60)
			local secs = seconds % 60
			label.Text = string.format("%02d:%02d", minutes, secs)
		end
		task.wait(1)
	end
end)

pauseBtn.MouseButton1Click:Connect(function()
	paused = not paused
	pauseBtn.Text = paused and "‚ñ∂ Resume" or "‚è∏ Pause"
end)

resetBtn.MouseButton1Click:Connect(function()
	seconds = 0
	label.Text = "00:00"
end)
